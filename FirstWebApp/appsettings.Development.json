//file che gestisce le impostazioni SOLO quando siamo in ambiente di sviluppo. Cambiano il nome dell'ambiente cambia dove vengono applicate
{
  "DetailedErrors": true,
  "Logging": {
    "LogLevel": {
      "Default": "Information", //in ambiente sviluppo, per performance, posso anche lasciare Information
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "Courses": {
    "PerPage": 20,
    "Order": {
      "By": "Rating",
      "Ascending": false,
      "Allow": [ "Title", "Rating", "CurrentPrice" ]
    }
  } 
}
