{
  "Logging": {
    "LogLevel": {
      "Default": "Warning", //di default in realt√† sarebbe Information
      // I livelli sono: Trace, Debug, Information, Warning, Error, Critical
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "Kestrel": {
    "Home": {
      "Duration": 60,
      "Location": "Browser",
      "VarByQueryKeys" :  ["page"]
    }
  },
  "AllowedHosts": "*",
  "ConnectionStrings": {
    "Default": "Data Source=(LocalDb)\\FirstWebApp;Database=FirstWebAppDB;Trusted_Connection=True;"
  },
  "Courses": {
    "PerPage": 10,
    "InHome":  3,
    "Order": {
      "By": "Rating",
      "Ascending": false,
      "Allow": [ "Title", "Rating", "CurrentPrice" ]
    }
  },
  "MemoryCache": {
    "SizeLimit":  1000
  }
}
