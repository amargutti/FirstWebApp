@model CourseViewModel

<div class="row list-group-item d-flex align-items-center">
    <div class="col-md-1">
        <img src="@Model.ImagePath" width="50" />
    </div>
    <div class="col-md-5">
        <h2 class="text-primary">@Model.Title</h2>
        <author class="text-secondary">di @Model.Author</author>
    </div>
    <div class="col-md-2" title="@Model.Rating">
        <rating value="@Model.Rating"></rating>
    </div>
    <div class="col-md-2">
        <price current-price="@Model.CurrentPrice" full-price="@Model.FullPrice"></price>
    </div>
    <div class="col-md-2">
        <a asp-action="Details" asp-controller="Courses" asp-route-id="@Model.Id" class="btn btn-outline-primary">Dettagli Corso @Model.Id</a>
    </div>
</div>
