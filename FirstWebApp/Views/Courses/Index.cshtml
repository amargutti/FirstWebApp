@model CourseListViewModel

<div class="row">
    <div class="col-md-8">
        <h1 class="my-4">@ViewData["Title"]</h1>
    </div>
    <div class="col-md-4 d-flex align-items-center">
        <form asp-controller="Courses" asp-action="Index" method="GET"> <!--siccome siamo nella suddetta via possono essere superflui-->
            <div class="input-group">
                <input type="text" name="search" placeholder="Cerca..." value="@Model.Input.Search"/>
                <div class="input-group-append">
                    <button><i class="bi bi-search"></i></button>
                </div>
            </div>
        </form>
    </div>
</div>


<div class="row my-2">
    <div class="col-md-1"></div>
    <div class="col-md-5"><a asp-route-orderby="Title" asp-route-ascending="@(Model.Input.OrderBy == "Title" ? !Model.Input.Ascending : true)" asp-route-search="@Model.Input.Search">Titolo @if (Model.Input.OrderBy == "Title")
            {
                <i class="bi bi-caret-@(Model.Input.Ascending ? "up" : "down")-fill"></i>
            }
        </a></div>
    <div class="col-md-2"><a asp-route-orderby="Rating" asp-route-ascending="@(Model.Input.OrderBy == "Rating" ? !Model.Input.Ascending : true)" asp-route-search="@Model.Input.Search">Rating @if (Model.Input.OrderBy == "Rating")
            {
                <i class="bi bi-caret-@(Model.Input.Ascending ? "up" : "down")-fill"></i>
            }
        </a></div>
    <div class="col-md-2"><a asp-route-orderby="CurrentPrice" asp-route-ascending="@(Model.Input.OrderBy == "CurrentPrice" ? !Model.Input.Ascending : true)" asp-route-search="@Model.Input.Search">Price @if (Model.Input.OrderBy == "CurrentPrice")
            {
                <i class="bi bi-caret-@(Model.Input.Ascending ? "up" : "down")-fill"></i>
            }
        </a></div>
    <div class="col-md-2"></div>
</div>

<div class="list-group">
    @foreach(CourseViewModel course in Model.Courses.Results)
    {
        <div class="row list-group-item d-flex align-items-center">
            <div class="col-md-1">
                <img src="@course.ImagePath" width="50" />
            </div>
            <div class="col-md-5">
                <h2 class="text-primary">@course.Title</h2>
                <author class="text-secondary">di @course.Author</author>
            </div>
            <div class="col-md-2" title="@course.Rating">
                @for(int i = 0; i <=5; i++)
                {
                    if(course.Rating >= i)
                    {
                        <i class="bi bi-star-fill text-warning"></i>
                    } else {
                        <i class="bi bi-star-fill"></i>
                    }
                }
            </div>
            <div class="col-md-2">
                 @course.CurrentPrice <br /> 
                @if(!course.CurrentPrice.Equals(course.FullPrice))
                {
                    <s class="text-secondary">@course.FullPrice</s>
                }
            </div>
            <div class="col-md-2">
                <a asp-action="Details" asp-controller="Courses" asp-route-id="@course.Id" class="btn btn-outline-primary">Dettagli Corso @course.Id</a>
            </div>
        </div>
    }
</div>

@{
    int totalPages = (int) Math.Ceiling(Model.Courses.TotalCount / (decimal) Model.Input.Limit);
    int currentPage = Model.Input.Page;
}

<nav aria-label="Paginazione" class="d-flex justify-content-center">
    <ul class="pagination d-flex align-content-center mt-3">
        @if(currentPage > 1)
        {
            <li class="page-item">
                <a class="page-link" asp-route-page="@(currentPage - 1)" asp-route-search="@Model.Input.Search" asp-route-orderby="@Model.Input.OrderBy" asp-route-ascending="@Model.Input.Ascending"><i class="bi bi-arrow-left"></i></a>
            </li>
        }
        @for(int p = Math.Max(1, currentPage - 4); p <= Math.Min(totalPages, currentPage + 4); p++)
        {
            if(p == currentPage)
            {
                <li class="page-item active">
                    <a class="page-link" asp-route-page="@p" asp-route-search="@Model.Input.Search" asp-route-orderby="@Model.Input.OrderBy" asp-route-ascending="@Model.Input.Ascending">@p</a>
                </li>
            } else
            {
                <li class="page-item">
                    <a class="page-link" asp-route-page="@p" asp-route-search="@Model.Input.Search" asp-route-orderby="@Model.Input.OrderBy" asp-route-ascending="@Model.Input.Ascending">@p</a>
                </li>
            }
        }
        @if (currentPage < totalPages)
        {
            <li class="page-item">
                <a class="page-link" asp-route-page="@(currentPage + 1)" asp-route-search="@Model.Input.Search" asp-route-orderby="@Model.Input.OrderBy" asp-route-ascending="@Model.Input.Ascending"><i class="bi bi-arrow-right"></i></a>
            </li>
        }
    </ul>
</nav>